<div align="right">
  <%= generate_common_links({index_path: article_types_path(request.parameters.merge({format: :xls})), create_path: new_article_type_path, object: @article_types, create_text: "Add New Article Type" }) %>
</div>
<div align="left">
  <%= generate_search_form({index_path: article_types_path, placeholder: params[:search] ? params[:search] : "Search Article Type" }) %>
</div>
<fieldset>
  <legend> Article Types List</legend>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th data-sorter="false">Actions</th>
      </tr>
    </thead>
    <tbody>
      <%= render @article_types %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="2"><%= pluralize(@article_types.size, 'article type') %></td>
      </tr>
    </tfoot>
  </table>
  <%= will_paginate @article_types %>
</fieldset>


