<tr>
  <td width="30%"><%= product.full_name %></td>
  <td width="10%"><%= product.sku %></td>
  <td width="5%"><%= product.price %></td>
  <td width="30%"><%= product.ingredients %></td>
  <td width="25%">
    <% if current_user.has_role? :admin %>
      <%= generate_edit_delete_link({object: product, path_value: edit_product_path(product)}) %>
    <% end %>
    <%= link_to "Additional Claims", product_additional_claims_path(product), class: 'btn btn-min btn-primary' %>
  </td>
</tr>
